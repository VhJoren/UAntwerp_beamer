% <<<======================================================================
% Color theme for the beamer UAntwerp template
% ======================================================================>>>
\mode<presentation>

% <<<======================================================================
% The UAntwerp theme colours
\input{colorsUAntwerp.sty}
% ======================================================================>>>


% <<<======================================================================
% Define colours of several different types of text elements
\setbeamercolor{titlelike}{fg=uablue} % base for all colours that are like titles (frame title, subtitle, document title ...)
\setbeamercolor{title}{fg = uablue, bg = white} % presentation title colour
\setbeamercolor{subtitle}{fg = lightgrey, bg = white} % presentation subtitle colour
\setbeamercolor{author}{fg = darkgrey, bg = white} % author colour
\setbeamercolor{frametitle}{fg = uablue, bg = white} % frame title colour
\setbeamercolor{framesubtitle}{fg = darkgrey, bg = white} %frame subtitle colour
\setbeamercolor{normal text}{fg = uablue, bg = white} % normal text colour
\setbeamercolor{page number in head/foot}{fg = white} % page number in footline colour
\setbeamercolor{colourdivider}{fg = white} % colour scheme for a section divider slide
\setbeamercolor*{section in toc}{fg = uablue, bg = white} % section colour in table of contents
\setbeamercolor*{subsection in toc}{fg = darkgrey, bg = white} % subsection colour in table of contents
\setbeamercolor*{alerted text}{fg=uared}
% ======================================================================>>>


% <<<======================================================================
% Define colours of different types of elements
\setbeamercolor*{item}{fg = uablue} % colour of itemize-like item symbol
\setbeamercolor*{subitem}{fg = uablue} % colour of itemize-like subitem symbol
\setbeamercolor*{subsubitem}{fg = uablue} % colour of itemize-like subsubitem symbol
% ======================================================================>>>

% <<<======================================================================
% Define colours for blocks
\setbeamercolor*{block title}{fg = white, bg = uablue} % colour of block titles
\setbeamercolor*{block body}{fg = black, bg = uablue25} % colour of block body
% ======================================================================>>>

\mode<all>